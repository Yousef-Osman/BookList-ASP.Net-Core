@model Book
@{
    ViewData["Title"] = "AddBook";
}

<h3 class="mb-3">Add a Book</h3>
<form asp-action="AddBook" method="post">
    <div class="form-group row">
        <label asp-for="Name">Book Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Author">Auther Name</label>
        <input type="text" asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Pages">No. of Pages</label>
        <input type="number" asp-for="Pages" class="form-control" />
        <span asp-validation-for="Pages" class="text-danger"></span>
    </div>
    <input type="submit"  value="Add book" class="btn btn-success"/>
</form>

