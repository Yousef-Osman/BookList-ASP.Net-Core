@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<h3>Our List</h3>

<table class="table">
    <thead class="bg-info text-white">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Book Name</th>
            <th scope="col">Author</th>
            <th scope="col">Pages</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <th>@book.Id</th>
                <td>@book.Name</td>
                <td>@book.Author</td>
                <td>@book.Pages</td>
                <td>
                    <a asp-action="Update" class="btn btn-warning" asp-route-id="@book.Id">Update</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a />
    <a type="button" asp-action="AddBook" class="btn btn-success">Add a book</a>
</div>